<h1>Register:</h1>

<% if @user.errors.any? %>
<ul class='errors'>
<% @user.errors.full_messages.each do |message| %>
  <li class="error"><%= message %></li>
<% end %>
</ul>
<% end %>

<%= form_for @user do |f| %>

  <%= f.label :user_name %><br />
  <%= f.text_field :user_name %>

  <%= f.label :email_address %><br />
  <%= f.text_field :email_address %>

  <%= f.label :password %><br />
  <%= f.text_field :password %>

  <%= f.submit %>

<% end %>
